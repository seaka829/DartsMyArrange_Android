<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/changa_medium</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white_color</item>
        <item name="android:textColorSecondary">@color/white_color</item>
        <item name="android:colorControlHighlight">@color/white_color</item>
    </style>
    <style name="TextAppearance.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/changa_medium</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
    </style>

</resources>
